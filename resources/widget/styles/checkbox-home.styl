.container-small-length
  .VueCarousel-inner
    justify-content: center

.checkboxes-home-list
  padding: 15px 0 15px 50px
  box-sizing: border-box
  text-align: center

  .VueCarousel-navigation
    position: relative
    width: 100%

  .VueCarousel-navigation button
    font-size: 80px
    margin-top: -22px

    @media (max-width: 767px)
      font-size: 60px
      margin-top: -17px

  .VueCarousel-navigation
    .VueCarousel-navigation-prev
      left: 30px

      @media (max-width: 767px)
        left: 15px

    .VueCarousel-navigation-next
      right: 30px

      @media (max-width: 767px)
        right: 15px

  @media (max-width: 767px)
    padding: 8px 0

  input[type=checkbox] + label
    display: inline-block
    cursor: pointer
    padding: 0.07em 0.14em
    border-radius: 50%
    box-sizing: border-box
    user-select: none

    @media (max-width: 767px)
      padding: 0 0.07em

  input[type=checkbox]
    display: none

  input[type=checkbox] + label:before
    content: "\2714"
    display: inline-block
    width: 1em
    height: 1em
    color: transparent
    transition: .2s

  input[type=checkbox]:checked + label:before
    color: #fff

  input[type=checkbox]:disabled + label:before
    border-color: #aaa

.checkbox-price
  font-size: 12px
  display: inline-block
  margin: 0 0 0 10px

  @media (max-width: 375px)
    margin: 0 0 0 5px

  span
    font-family: Arial, Tahoma, Verdana, sans-serif
    font-weight: 700

.checkbox-home
  display: inline-block
  width: 20%
  min-width: 85px
  box-sizing: border-box

  label
    user-select: none
    cursor: pointer

  @media (min-width: 1024px)
    width: 120px
